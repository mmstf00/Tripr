{
  "name": "tripr-server",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--no-deprecation' tsx watch --inspect src/index.ts",
    "dev:android": "cross-env NODE_OPTIONS='--no-deprecation' DOTENV_CONFIG_PATH=.env.android tsx watch --inspect src/index.ts",
    "build": "tsc",
    "start": "cross-env NODE_OPTIONS='--no-deprecation' node dist/index.js",
    "type-check": "tsc --noEmit",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "7.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.1",
    "firebase-admin": "^13.6.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.16.5",
    "cross-env": "^7.0.3",
    "prisma": "^7.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
}